doctype html
html
  head
    title Produce Sales Record
    link(rel='stylesheet' href='/css/sales.css')
  body
    .page-wrapper
      .sales-form
        h2 Record Sales
        form#salesRecordForm(action='/addSale/${produce._id}' method='POST')
          .form-group
            label(for='produceName') Produce Name
            select#produceName(name='produceName')
              option(value='') Select Produce
              option(value=produce._id) #{produce.produceName} 
          .form-group
            label(for='tonnage') Tonnage (kgs):
            input#tonnage(type='number' name='tonnage')
          .form-group
            label(for='pricePerkg') Price per kg
            input#pricePerkg(type='number' name='pricePerkg')
          .form-group
            label(for='amountPaid') Amount Paid (UgX):
            input#amountPaid(type='number' name='amountPaid')
          .form-group
            label(for='quantitysold') Quantity Sold
            input#quantitysold(type='number' name='qsold')
          .form-group
            label(for='buyerName') Buyer's Name:
            input#buyerName(type='text' name='buyerName')
          // Part for Seller Selection
          .form-group
            label(for='seller') Seller:
            select#seller(name='seller' required)
              option(value='') Select Seller
              if currentUser
                 option(value=currentUser._id) #{currentUser.fullName} 
              else
                option(value='' disabled) No Sellers Available
          // End of Seller Part
          .form-group
            label(for='dateTime') Date and Time:
            input#dateTime(type='datetime-local' name='dateTime')
          button(type='submit') Submit

      footer
