doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Update Produce
    link(rel="stylesheet" href="/css/produce.css")
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    )
  body
    // Navbar
    nav.navbar
      .navbar-container
        .logo
          a(href='/') Karibu Groceries
        .navbar-links
          a(href='/') Home
          a(href='/addProduce') Procurement
          //- a(href='/produceList') Produce List
          a(href='/addSale/6818bd19927586a513ba2ec5') Sales
          //- a(href='/salesList') Sales List
          a(href='/credit') Record Credit 
          //- a(href='/creditList') Credit List
          a(href='/logout') Logout

    // Main Content
    main.content
      form.form#form(action="/updateProduce/" + produce._id method="post")
        .form-container
          .form-header
            h2 Update Stock

          // Produce Field
          .form-group
            label(for="produce") Produce
            select#produce(name="produce" required)
              option(value="") Select Produce
              option(value="maize" selected=produce.produce === "maize") Maize
              option(value="cowpeas" selected=produce.produce === "cowpeas") Cowpeas
              option(value="beans" selected=produce.produce === "beans") Beans
              option(value="soybeans" selected=produce.produce === "soybeans") Soybeans

          // Type Field
          .form-group
            label(for="type") Type
            select#type(name="type" required)
              option(value="") Select Type
              option(value="legume" selected=produce.type === "legume") Legume
              option(value="cereal" selected=produce.type === "cereal") Cereal

          // Tonnage Field
          .form-group
            label(for="tonnage") Tonnage (kgs)
            input#tonnage(type="number" name="tonnage" value=produce.tonnage required)

          // Buying Price Field
          .form-group
            label(for="buyingPrice") Buying Price (Ugx)
            input#buyingPrice(type="number" name="buyingPrice" value=produce.buyingPrice required)

          // Selling Price Field
          .form-group
            label(for="sellingPrice") Selling Price (Ugx)
            input#sellingPrice(type="number" name="sellingPrice" value=produce.sellingPrice required)

          // Branch Field
          .form-group
            label(for="branch") Branch
            select#branch(name="branch" required)
              option(value="") Select Branch
              option(value="mattuga" selected=produce.branch === "mattuga") Mattuga
              option(value="maganjo" selected=produce.branch === "maganjo") Maganjo

          // Dealers Field
          .form-group
            label(for="dealers") Dealers
            input#dealers(type="text" name="dealers" value=produce.dealers required)

          // Payment Method Field
          .form-group
            label(for="paymentmethod") Payment Method
            select#paymentmethod(name="paymentmethod" required)
              option(value="") Select Method
              option(value="cash" selected=produce.paymentmethod === "cash") Cash
              option(value="mobilemoney" selected=produce.paymentmethod === "mobilemoney") Mobile Money
              option(value="banktransfer" selected=produce.paymentmethod === "banktransfer") Bank Transfer

          // Date Field
          .form-group
            label(for="date") Date
            input#date(type="date" name="date" value=produce.date required)

          // Time Field
          .form-group
            label(for="time") Time
            input#time(type="time" name="time" value=produce.time required)

          // Submit Button
          button.submit-button(type="submit") Update Stock

    // Footer
    footer.page-footer
