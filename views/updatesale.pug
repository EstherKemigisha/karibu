doctype html
html
  head
    title Produce Sales Record
    link(rel='stylesheet' href='/css/sale.css')
  body
    .page-wrapper
      .sales-form
        h2 Record Sales
        form#salesRecordForm(action='/updateSale?id=' + sale._id method='POST')
          label(for='produceName') Produce Name
          select#produceName(name='produceName')
            option(value='beans') Beans
            option(value='cowpeas') Cowpeas
            option(value='soybeans') Soy beans
            option(value='groundnuts') Ground nuts 

          label(for='tonnage') Tonnage (kgs):
          input#tonnage(type='number' name='tonnage')

          label(for='amountPaid') Amount Paid (UgX):
          input#amountPaid(type='number' name='amountPaid')
          #amountPaidError.error

          label(for='buyerName') Buyer's Name:
          input#buyerName(type='text' name='buyerName')
          #buyerNameError.error

          label(for='salesAgentName') Sales Agent's Name:
          input#salesAgentName(type='text' name='salesAgentName')
          #salesAgentNameError.error

          label(for='dateTime') Date and Time:
          input#dateTime(type='datetime-local' name='dateTime')

          button(type='submit') Update Sale

      footer
