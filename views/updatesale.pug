doctype html
html
  head
    title Produce Sales Record
    link(rel='stylesheet' href='/css/saless.css')
    link(
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css'
    )
  body
    
    nav.navbar
      .navbar-container
        .logo
          a(href='/') Karibu Groceries
        .navbar-links
          a(href='/') Home
          a(href='/addProduce') Procurement
          //- a(href='/produceList') Produce List
          a(href='/addSale/6818bd19927586a513ba2ec5') Sales
          //- a(href='/salesList') Sales List
          a(href='/credit') Record Credit 
          //- a(href='/creditList') Credit List
          a(href='/logout') Logout

    // Main Content
    .sales-form
      h2 Update Sales
      form#salesRecordForm(action=`/updateSale/${sale._id}` method='POST')
        .form-group
          label(for='produceName') Produce Name
          input#produceName(type='text' name='produceName' value=sale.produceName required)

        .form-group
          label(for='tonnage') Tonnage (kgs):
          input#tonnage(type='number' name='tonnage' value=sale.tonnage required)

        .form-group
          label(for='pricePerkg') Price per kg
          input#pricePerkg(type='number' name='pricePerkg' value=sale.pricePerkg required)

        .form-group
          label(for='amountPaid') Amount Paid (UgX):
          input#amountPaid(type='number' name='amountPaid' value=sale.amountPaid required)

        .form-group
          label(for='quantitysold') Quantity Sold
          input#quantitysold(type='number' name='qsold' value=sale.qsold required)

        .form-group
          label(for='totalamount') Total Amount (UgX):
          input#totalamount(type='number' name='totalAmount' value=sale.totalAmount required)

        .form-group
          label(for='branch') Branch Name:
          select#branch(name='storeBranch')
            option(value='') Branch Name
            option(value='mattuga' selected=sale.storeBranch === 'mattuga') Mattuga
            option(value='maganjo' selected=sale.storeBranch === 'maganjo') Maganjo

        .form-group
          label(for='buyerName') Buyers Name:
          input#buyerName(type='text' name='buyerName' value=sale.buyerName required)

        .form-group
          label(for='salesAgent') salesAgent Name:
          input#salesAgent(type='text' name='salesAgentName' value=salesAgentNamerequired)

        .form-group
          label(for='dateTime') Date and Time:
          input#dateTime(type='datetime-local' name='dateTime' value=sale.dateTime)

        button(type='submit') Update Sale

